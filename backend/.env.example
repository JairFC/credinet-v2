# Base de configuración para el backend de Credinet
# Copia este archivo a `.env` y ajusta los valores según tu entorno local o Docker.

# Configuración de la API
PROJECT_NAME=Credinet API
API_VERSION=1.0.0
FRONTEND_URL=http://localhost:5173

# Seguridad
SECRET_KEY=change_me_in_local_env
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Base de datos principal (desarrollo)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=credinet_db
POSTGRES_USER=credinet_user
POSTGRES_PASSWORD=credinet_pass

# Base de datos para pruebas (pytest / smoke)
TEST_POSTGRES_HOST=localhost
TEST_POSTGRES_PORT=5432
TEST_POSTGRES_DB=credinet_test_db
TEST_POSTGRES_USER=credinet_user
TEST_POSTGRES_PASSWORD=credinet_pass

# Directorio de archivos
UPLOAD_DIR=uploads/documents
MAX_FILE_SIZE=10485760

# Configuración de negocio
DEFAULT_COMMISSION_RATE=5.0
PENALTY_COMMISSION_REDUCTION=30.0

# Servicios externos
ZIP_CODE_API_URL=https://api.tau.com.mx/dipomex/v1/codigo_postal
